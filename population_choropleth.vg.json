{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population by State, Malaysia (2022)",
  "width": 1000,
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [109.5, 4],
    "scale": 2850
  },
  "layer": [
    {
        "data": {
            "graticule": {"step": [3, 3]}
        },
        "mark": {"type": "geoshape", "stroke": "lightgray", "fill": "none"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Serene0324/Homework_Week10/Homework_Week10/ne_10m_admin_1_states_provinces.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Serene0324/Homework_Week10/Homework_Week10/total_population_2022.csv"
            },
            "key": "state",
            "fields": ["population"]
          }
        },
        {
          "window": [{"op": "sum", "field": "population", "as": "total_pop"}],
          "frame": [null, null]
        },
        {
          "calculate": "datum.population / datum.total_pop",
          "as": "population_normalized"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "population_normalized",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Population (% of total)"
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "population", "type": "quantitative", "title": "Population ('000)"},
          {
            "field": "population_normalized",
            "type": "quantitative",
            "format": ".2%",
            "title": "Share of Total"
          }
        ]
      }
    }
  ]
}
